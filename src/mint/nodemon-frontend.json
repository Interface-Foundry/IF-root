{
    "restartable": "rs",
    "ignore": [
        ".git",
        "node_modules/**/node_modules",
        "./react/",
        "./public/",
        "./kip-website/",
        "./react-common/"
    ],
    "verbose": true,
    "events":
    {
        "restart": "osascript -e 'display notification \"App restarted due to:\n'$FILENAME'\" with title \"nodemon\"'"
    },
    "watch": [
        "./server/"
    ],
    "env":
    {
        "NODE_ENV": "development",
        "SEND_EMAILS": ""
    },
    "ext": "js json"
}
