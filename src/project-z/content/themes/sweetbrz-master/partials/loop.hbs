      <div class="card-block">
        <h4 class="card-title"><a style="color:#ff3900;" href="{{url}}">{{{title}}}</a></h4>
        
        <p class="card-text">{{excerpt words=25}}â€¦</p>
        {{#if tags}}
          Tags: {{tags separator=" | "}}
        {{/if}}
        <hr />
      </div>
    </div>

  {{/foreach}}
</div>
<br>

</div>

