{{!< default}} 
{{#post ~}}
    <div class="post-image-container" style="background-image: url({{image}})">
      <div class="post-image-filter">
        <div class="text-xs-center post-info">
          <h1 class="post-title animated fadeInUp">{{title}}</h1>

        {{#if tags}}<span class="tags animated fadeInUp"><i class="fa fa-tags"></i> {{tags prefix="" separator=", "}}</span>{{/if}}

        </div>
      </div>
    </div>
    <br />
  <div class="container bg-white">
  <br />
  <section class="post-content">
    {{content}}
  </section>
  <br />
  </div>
  <br />

  <div class="container bg-white credits" style="border-top:7px solid #ff3900;">
  <br />
  <h2>You May Like...</h2> 
  <p></p>
    <div class="row">
      <div class="col-sm-6">
        {{#next_post}}
            <div class="card">
              <a href="{{url}}"><img style="width:100%; height:100%;" class="card-img-top" src="{{image}}" alt="Card image cap"></a>
              <div class="card-block">
                <h4 class="card-title"><a style="color:#ff3900;" href="{{url}}">{{{title}}}</a></h4>

                <p class="card-text">{{excerpt words=19}}…</p>
              </div>
            </div>
        {{/next_post}}
      </div>
      <div class="col-sm-6">
        {{#prev_post}}
    <div class="card">
      <a href="{{url}}"><img style="width:100%; height:100%;" class="card-img-top" src="{{image}}" alt="Card image cap"></a>
      <div class="card-block">
        <h4 class="card-title"><a style="color:#ff3900;" href="{{url}}">{{{title}}}</a></h4>

        <p class="card-text">{{excerpt words=19}}…</p>
      </div>
    </div>
    {{/prev_post}}
    </div>
</div>
</div>

{{~/post}}
