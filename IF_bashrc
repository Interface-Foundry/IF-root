# handy things for developing at IF

# directories
export IF_ROOT=$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )
export IF_ANGULAR="$IF_ROOT"/app/src
export IF_SCHEMAS="$IF_ROOT"/components/IF_schemas
export IF_ANALYTICS="$IF_ROOT"/IF_services/IF_analytics

alias IF='cd "$IF_ROOT"'

# fun aliases
alias wow='git status'
alias such='git'
alias very='git'
alias much='git'

alias give='cat'
alias icanhaz='cat'


alias up='cd ..'


# typos
alias ndoe='node'
alias l='ls'



# git
alias gs='git status -sb' # upgrade your git if -sb breaks for you. it's fun.
alias gl='git pull --prune'
alias glog="git log --graph --pretty=format:'%Cred%h%Creset %an: %s - %Creset %C(yellow)%d%Creset %Cgreen(%cr)%Creset' --abbrev-commit --date=relative"
alias gp='git push origin HEAD'
alias gd='git diff'
alias gc='git commit'
alias gca='git commit --amend'
alias gco='git checkout'
alias gcb='git copy-branch-name'
alias gb='git branch'


