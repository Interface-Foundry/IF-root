{
  "parser": "babel-eslint",
  "sourceType": "module",
  "extends": ["standard", "plugin:react/recommended", "eslint:recommended"],
  "env": {
    "browser": true,
    "node": true,
    "mocha": true
  },
  "ecmaFeatures": {
    "classes": true,
    "jsx": true
  },
  "parserOptions": {
    "ecmaVersion": 8
  },
  "plugins": [
    "standard",
    "react"
  ],
  "globals": {
    "kip": true,
    "db": true,
    "React": true
  },
  "rules": {
    "no-console": "off",
    "semi": [0, "always"],
    "camelcase": 0,
    "eqeqeq": 1,
    "space-before-function-paren": 0,
    "one-var": 0,
    "quotes": [
      1,
      "single"
    ],
    "no-extra-semi": 2,
    "semi-spacing": [
      2, {
        "before": false,
        "after": true
      }
    ]
  }
}
