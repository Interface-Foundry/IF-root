{
  "parser": "babel-eslint",
  "extends": ["standard", "plugin:react/recommended", "eslint:recommended"],
  "env": {
    "browser": true,
    "node": true,
    "mocha": true
  },
  "parserOptions": {
    "ecmaVersion": 8,
    "sourceType": "module",
    "ecmaFeatures": {
      "classes": true,
      "jsx": true
    }
  },
  "plugins": [
    "standard",
    "react"
  ],
  "globals": {
    "kip": true,
    "db": true,
    "React": true
  },
  "rules": {
    "no-debugger": 1,
    "no-console": 1,
    "camelcase": 0,
    "eqeqeq": 1,
    "space-before-function-paren": 0,
    "one-var": 0,
    "comma-dangle": [1, "never"],
    "quotes": [1, "single"],
    "no-extra-semi": 2,
    "semi-spacing": [
      2, {
        "before": false,
        "after": true
      }
    ]
  }
}
