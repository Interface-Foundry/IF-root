{
  "extends": "standard",
  "env": {
    "node": true,
    "mocha": true
  },
  "parserOptions": {
    "ecmaVersion": 8
  },
  "plugins": [
    "standard"
  ],
  "globals": {
    "kip": true,
    "db": true
  },
  "rules": {
    "camelcase": 0,
    "eqeqeq": 1,
    "space-before-function-paren": 0,
    "one-var": 0,
    "quotes": [
      1,
      "single"
    ],
    "semi": [
      1,
      "always"
    ],
    "no-extra-semi": 2,
    "semi-spacing": [
      2, {
        "before": false,
        "after": true
      }
    ]
  }
}
